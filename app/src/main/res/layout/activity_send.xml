<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Rectangle 5 (Header Background) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:background="@drawable/ceruleanblue_fill" />

    <!-- Page Title: "Send Warning" -->
    <TextView
        android:id="@+id/title_send_warning"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Send Warning"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="-160dp" /> <!-- negative margin to overlap header -->

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <!-- Send Warning Button -->
    <Button
        android:id="@+id/btn_send_warning"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Send Warning"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/login_btn"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"/>

</LinearLayout>
