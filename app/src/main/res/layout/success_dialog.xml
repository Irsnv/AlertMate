<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogSuccess"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialogBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/ceruleanblue_border"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Success Text -->
        <TextView
            android:id="@+id/successTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success!"
            android:textSize="36sp"
            android:textColor="@color/ceruleanblue"
            android:layout_marginTop="16dp"/>

        <!--logo-->
        <ImageView
            android:id="@+id/loginImg"
            android:layout_width="205dp"
            android:layout_height="147dp"
            android:src="@drawable/successful"/>

        <!-- Congratulations Message -->
        <TextView
            android:id="@+id/congratulat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_desc"
            android:textSize="16sp"
            android:textColor="@color/ceruleanblue"
            android:gravity="center"
            android:layout_margin="16dp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btol_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Back to login"
            android:backgroundTint="@color/ceruleanblue"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>